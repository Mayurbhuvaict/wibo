{% block sw_order_list_smart_bar_header_title_text %}
    {{ $tc('zeobv-quotations.general.mainMenuItemGeneral') }}
{% endblock %}

{% block sw_order_list_smart_bar_actions_add %}{% endblock %}

{% block sw_order_list_grid_columns_order_number %}
    <template #column-extensions.zeobvQuote.quoteNumber="{ item }">
        {% block sw_order_list_grid_order_number_link %}
            <router-link :to="{ name: 'zeobv.quotations.detail', params: { id: item.id } }">
                {{ item.extensions.zeobvQuote.quoteNumber }}
            </router-link>
        {% endblock %}
    </template>
{% endblock %}

{% block sw_order_list_grid_columns_state %}
    <template #column-extensions.zeobvQuote.stateMachineState.name="{ item }">
        <sw-label :variant="getVariantFromQuotationState(item)" appearance="pill">
            {{ item.extensions.zeobvQuote.stateMachineState.translated.name }}
        </sw-label>
    </template>
{% endblock %}

{% block sw_order_list_grid_columns_actions_view %}
    <sw-context-menu-item class="sw-order-list__order-view-action" :routerLink="{ name: 'zeobv.quotations.detail', params: { id: item.id } }">
        {{ $tc('sw-order.list.contextMenuView') }}
    </sw-context-menu-item>
{% endblock %}
