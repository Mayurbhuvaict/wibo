<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="../service/subscriber.xml"/>
        <import resource="../service/controller.xml"/>
<!--        <import resource="../service/command.xml"/>-->
<!--        <import resource="../service/scheduled-task.xml"/>-->
        <import resource="../service/entity.xml"/>
        <import resource="../service/snippet.xml"/>
    </imports>

    <services>
        <service id="zeobv.quotations.service.config_service" class="Zeobv\Quotations\Service\ConfigService" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument>ZeobvQuotations</argument>
        </service>

        <service id="Zeobv\Quotations\Service\QuotationService" public="true">
            <argument type="service" id="zeobv.quotations.service.config_service" />
            <argument type="service" id="zeobv_quote.repository" />
            <argument type="service" id="Shopware\Core\System\NumberRange\ValueGenerator\NumberRangeValueGeneratorInterface" />
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry" />
        </service>
    </services>
</container>
