{% block block_text_image_text %}
    <div class="col-6">
        {% block block_text_left %}
            {% set element = block.slots.getSlot('left') %}
                <div class="col-10" data-cms-element-id="{{ element.id }}">
                    {% block block_text_inner_left %}
                        {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    {% endblock %}
                </div>
            <div class="col-2"></div>
        {% endblock %}
    </div>
    <div class="col-6">
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6 backgound-color">
                <div class="row bg-img-text">
                    {% block block_text_center %}
                        {% set element = block.slots.getSlot('center') %}
                        <div class="bg-img" data-cms-element-id="{{ element.id }}">
                            {% block block_text_inner_center %}
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% endblock %}
                        </div>
                    {% endblock %}

                    {% block block_text_right %}
                        {% set element = block.slots.getSlot('right') %}
                        <div class="bg-text-content" data-cms-element-id="{{ element.id }}">
                            {% block block_text_inner_right %}
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
