{% block block_text_image_text_uwaankooponzezorg %}
    <div class="col-3">
        {% block block_text_left_uwaankooponzezorg %}
            {% set element = block.slots.getSlot('left') %}
                <div class="col-10" data-cms-element-id="{{ element.id }}">
                    {% block block_text_inner_left %}
                        {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    {% endblock %}
                </div>
            <div class="col-2"></div>
        {% endblock %}
    </div>
    <div class="col-4">
        <div class="row bg-image">
            {% block block_text_center_uwaankooponzezorg %}
                {% set element = block.slots.getSlot('center') %}
                <div class="bg-img-uwaankooponzezorg" data-cms-element-id="{{ element.id }}">
                    {% block block_text_inner_center_uwaankooponzezorg %}
                        {% sw_include "@ZeobvCmsElements/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>
    <div class="col-5">
        <div class="row">
            <div class="col-12 backgound-color">
                <div class="row bg-image">
                    {% block block_text_right %}
                        {% set element = block.slots.getSlot('right') %}
                        <div class="bg-text-content" data-cms-element-id="{{ element.id }}">
                            {% block block_text_inner_right %}
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
