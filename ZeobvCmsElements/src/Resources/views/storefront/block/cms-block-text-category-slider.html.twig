{% block block_category_slider %}
    {% set columns = 1 %}
    {% block block_text_left %}
        {% set element = block.slots.getSlot('left') %}
        <div class="col-4" data-cms-element-id="{{ element.id }}">
            {% block block_text_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-"~element.type~".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_category_slider_right %}
        {% set element = block.slots.getSlot('right') %}
        <div class="col-8" data-cms-element-id="{{ element.id }}">
            {% block block_category_slider_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-"~element.type~".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
