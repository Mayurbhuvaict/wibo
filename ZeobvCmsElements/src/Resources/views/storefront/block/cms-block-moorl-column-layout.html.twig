<div class="col-md-12">
    {% if block.cssClass == 'mobile-slider' %}
        {% set productSliderOptions = {
            productboxMinWidth: '400px' ,
            slider: {
                gutter: 20,
                autoplayButtonOutput: false,
                nav: true,
                mouseDrag: true,
                controls: false,
                autoplay: true
            }
        } %}
        <div class="base-slider" data-product-slider="true" data-product-slider-options="{{ productSliderOptions|json_encode }}">
            <div class="product-slider-container" data-product-slider-container="true">
                {% for letter in 'a'..'z' %}
                    {% set element = block.slots.getSlot("slot-#{letter}") %}

                    {% if element %}
                        {% set moorlAnimation = element.config.moorlAnimation.value %}

                        {% if moorlAnimation %}
                            {% if moorlAnimation.in.active or moorlAnimation.out.active or moorlAnimation.hover.active %}
                                <div data-moorl-animation='{{ moorlAnimation|json_encode|raw }}'>
                                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                                </div>
                            {% else %}
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% endif %}
                        {% else %}
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
                {% for letter in 'a'..'z' %}
                    {% set element = block.slots.getSlot("slot-#{letter}") %}

                    {% if element %}
                        {% set moorlAnimation = element.config.moorlAnimation.value %}

                        {% if moorlAnimation %}
                            {% if moorlAnimation.in.active or moorlAnimation.out.active or moorlAnimation.hover.active %}
                                <div data-moorl-animation='{{ moorlAnimation|json_encode|raw }}'>
                                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                                </div>
                            {% else %}
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% endif %}
                        {% else %}
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="moorl-column-layout">
        {% for letter in 'a'..'z' %}
            {% set element = block.slots.getSlot("slot-#{letter}") %}

            {% if element %}
                {% set moorlAnimation = element.config.moorlAnimation.value %}

                {% if moorlAnimation %}
                    {% if moorlAnimation.in.active or moorlAnimation.out.active or moorlAnimation.hover.active %}
                        <div data-moorl-animation='{{ moorlAnimation|json_encode|raw }}'>
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                        </div>
                    {% else %}
                        {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    {% endif %}
                {% else %}
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                {% endif %}
            {% endif %}
        {% endfor %}
        </div>
    {% endif %}
</div>
