{% sw_extends '@Storefront/storefront/component/product/card/box-standard.html.twig' %}

{% block component_product_box_name %}
    {% if element.config.navigation.value == true or element.type  == "product-listing" %}
        <div class="product-title">{{ product.translated.name }}</div>
    {% else %}
        {% if element.type  == "product-slider" %}
            <div class="product-title">{{ product.translated.name }}</div>
            <div class="sku">{{  product.productNumber }}</div>
            <a href="{{ seoUrl('frontend.detail.page', {'productId': id}) }}" class="product-name" title="{{ product.manufacturer.name }}"> {{ product.manufacturer.name }}
                <span class="sku">{{  product.productNumber }}</span>
            </a>
        {% endif %}
    {% endif %}
{% endblock %}

{% block component_product_box_image %}
    <div class="product-relative">
        {{ parent() }}
    </div>
{% endblock %}

{% block component_product_box_action %}
    {{ parent() }}
    <a href="{{ seoUrl('frontend.detail.page', {'productId': id}) }}" class="add-to-cart">Bekjik Product</a>
{% endblock %}
