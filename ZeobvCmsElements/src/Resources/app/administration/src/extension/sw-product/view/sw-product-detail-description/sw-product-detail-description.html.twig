                v-model="product.extensions.pageProduct.subDescriptionEight"
                :placeholder="$tc('sw-product.description.descriptionEntityPlaceholderEight')"
            >
            </sw-field>
            <!--Eight field-->
        </div>

        {% block sw_product_detail_base_media_modal %}
            <sw-media-modal-v2
                v-if="showMediaModal"
                :initial-folder-id="mediaDefaultFolderId"
                :entity-context="product.getEntityName()"
                @media-modal-selection-change="onAddMedia"
                @modal-close="onCloseMediaModal"
            />
        {% endblock %}

    </sw-card>
    </sw-card-view>




{% endblock %}
