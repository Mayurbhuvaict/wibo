{% block sw_cms_element_product_slider %}
    <div class="sw-cms-el-text-category-slider">
        <div class="sw-cms-el-text">

        </div>

        <div class="sw-cms-el-category-slider" >
            {% block sw_cms_element_product_slider_title %}
                <div class="sw-cms-el-category-slider__title" v-if="element.config.title.value">
                    <h2>{{ element.config.title.value }}</h2>
                </div>
            {% endblock %}

            {% block sw_cms_element_product_slider_content %}
                <div class="sw-cms-el-category-slider__content">
                    {% block sw_cms_element_product_slider_arrow_left %}
                        <div v-if="hasNavigation" class="sw-cms-el-category-slider__navigation">
                            <sw-icon class="sw-cms-el-category-slider__navigation-button" name="default-arrow-head-left" size="24"></sw-icon>
                        </div>
                    {% endblock %}

                    {% block sw_cms_element_product_slider_product_holder %}
                        <div class="sw-cms-el-category-slider__product-holder" :style="sliderBoxMinWidth" ref="categoryHolder">
                            <template v-if="!element.data || !element.data.categories">
                                {% block sw_cms_element_category_slider_demo_data %}
                                    {# TODO: Delete the Demo Element and throw categories in here #}
                                    {# <sw-cms-el-product-box :element="demoCategoryElement" v-for="index in sliderBoxLimit" :key="index"></sw-cms-el-product-box> #}
                                        <div v-for="index in sliderBoxLimit" :key="index"> <img :src="'/administration/static/img/cms/preview_mountain_small.jpg' | asset">
                                        <h2>Category</h2>
                                    </div>
                                {% endblock %}
                            </template>

                            <template v-else>
                                {% block sw_cms_element_product_slider_products %}
                                    {# <sw-cms-el-product-box v-for="(product, index) in element.data.products" :key="product.id" v-if="index < sliderBoxLimit" :element="getProductEl(product)"></sw-cms-el-product-box> #}
                                    <div v-for="(category, index) in element.data.categories" :key="category.id" v-if="index < sliderBoxLimit">
                                        <div class=" sw-cms-el-category-slider-item">
                                            <img v-if="category.media" :src="category.media.url"/>
                                            <h2>{{ category.name }}</h2>
                                        </div>
                                    </div>
                                {% endblock %}
                            </template>
                        </div>
                    {% endblock %}

                    {% block sw_cms_element_product_slider_arrow_right %}
                        <div v-if="hasNavigation" class="sw-cms-el-category-slider__navigation">
                            <sw-icon class="sw-cms-el-category-slider__navigation-button" name="default-arrow-head-right" size="24"></sw-icon>
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
