{% sw_extends '@Storefront/storefront/page/product-detail/tabs.html.twig' %}

{% block page_product_detail_tabs_navigation_container %}
	<div class="nav-tabs-wrapper">
		<ul class="nav nav-tabs product-detail-tab-navigation-list" id="product-detail-tabs" role="tablist">
			{% block page_product_detail_tabs_navigation_description %}
                {{ parent() }}
			{% endblock %}

			{% block page_product_detail_tabs_navigation_review %}
				{{ parent() }}
			{% endblock %}

			{% block page_product_details_tabs_downloads %}
				{% if page.product.customFields.zeobv_schouw_witgoed_custom_product_downloads is not empty %}
					<li class="nav-item">
						<a class="nav-link product-detail-tab-navigation-link" id="downloads-tab" data-toggle="tab" data-offcanvas-tabs="true" href="#downloads-tab-pane" role="tab" aria-controls="downloads-tab-pane" aria-selected="true"> {{ "detail.tabsDownloads"|trans|sw_sanitize }}
							<span class="product-detail-tab-navigation-icon">
								{% sw_icon 'arrow-medium-right' style {'pack':'solid'} %}
							</span>
						</a>
					</li>
				{% endif %}
			{% endblock %}

			{% block page_product_details_tabs_add_to_cart_button_wrapper %}
				{% block page_product_details_tabs_add_to_cart_button %}
                    {% if page.product.extensions.ZeobvSchouwWitgoed.showPrice %}
                        <button class="btn btn-secondary btn-buy ml-auto" title="{{ "detail.addProduct"|trans|striptags }}" data-toggle="modal" data-target="#addToCartModal"> {{ "detail.addProduct"|trans|sw_sanitize }}
                        </button>
                    {% endif %}
				{% endblock %}
			{% endblock %}
		</ul>
	</div>
{% endblock %}
