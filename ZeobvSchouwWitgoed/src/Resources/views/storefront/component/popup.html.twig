{% sw_extends '@ZeobvReciprocity/storefront/component/popup.html.twig' %}

{% block reciprocity_popup_form_inner %}
    {{ parent() }}

    {% set retailRocketOptions = {
        'partnerId' : page.extensions.ZeobvRetailRocket.partnerId,
        'cookieEnabled' : page.extensions.ZeobvRetailRocket.cookieEnabled,
    } %}

    <input
        type="hidden"
        name="data-retail-rocket-email"
        data-retail-rocket-email-newsletter-popup="true"
        data-retail-rocket-email-newsletter-popup-options='{{ retailRocketOptions|json_encode|sw_sanitize }}'
    >
{% endblock %}
