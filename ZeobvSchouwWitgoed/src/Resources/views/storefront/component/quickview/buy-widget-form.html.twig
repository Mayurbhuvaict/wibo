{% sw_extends '@Storefront/storefront/component/quickview/buy-widget-form.html.twig' %}

{% block page_product_detail_buy_quantity_container %}
    {% if page.product.extensions.ZeobvSchouwWitgoed.showPrice %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block page_product_detail_buy_button_container %}
    {% if page.product.extensions.ZeobvSchouwWitgoed.showPrice %}
        {{ parent() }}
    {% else %}
        <div class="col">
            {% sw_include "@ZeobvSchouwWitgoed/storefront/component/buy-widget/buy-widget-hide-price-button.html.twig" with {
                product: page.product
            } %}
        </div>
    {% endif %}
{% endblock %}
